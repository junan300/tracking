{
  "name": "goal-tracker-app",
  "version": "2.1.0",
  "description": "Beautiful goal tracking desktop app",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env ELECTRON_DEV=true concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env ELECTRON_DEV=true electron .\"",
    "electron:build": "vite build && electron-builder",
    "start": "npm run build && electron .",
    "start:dev": "npm run electron:dev"
  },
  "keywords": ["goals", "productivity", "tracker"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "chart.js": "^4.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.goaltracker.app",
    "productName": "Goal Tracker",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ]
  }
}
